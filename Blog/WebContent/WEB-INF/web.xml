<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Blog</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>LoginCheckFilter</filter-name>
    <filter-class>filters.LoginCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginCheckFilter</filter-name>
    <servlet-name>AdminCadastraArtigo</servlet-name>
    <servlet-name>AdminListarArtigos</servlet-name>
    <servlet-name>AdminCadastraPagina</servlet-name>
    <servlet-name>AdminListarPaginas</servlet-name>
    <servlet-name>AdminCadastraCategoria</servlet-name>
    <servlet-name>AdminListarCategorias</servlet-name>
    <servlet-name>AdminListarComentarios</servlet-name>
    <servlet-name>AdminCadastraUsuario</servlet-name>
    <servlet-name>AdminListarUsuarios</servlet-name>
  </filter-mapping>
</web-app>